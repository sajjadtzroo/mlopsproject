# Airflow Configuration

# Core
AIRFLOW__CORE__DAGS_FOLDER=/workspaces/mlopsproject/airflow/dags
AIRFLOW__CORE__EXECUTOR=SequentialExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__LOAD_DEFAULT_CONNECTIONS=False

# Database
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=sqlite:////workspaces/mlopsproject/airflow/airflow.db

# Webserver
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=True
AIRFLOW__WEBSERVER__WEB_SERVER_PORT=8080
AIRFLOW__WEBSERVER__BASE_URL=http://localhost:8080
AIRFLOW__WEBSERVER__ENABLE_PROXY_FIX=True
AIRFLOW__WEBSERVER__COOKIE_SAMESITE=Lax
AIRFLOW__WEBSERVER__COOKIE_SECURE=False

# Scheduler
AIRFLOW__SCHEDULER__DAG_DIR_LIST_INTERVAL=30

# Logging
AIRFLOW__LOGGING__BASE_LOG_FOLDER=/workspaces/mlopsproject/airflow/logs

# API
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth

# Admin user credentials (for initial setup)
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=admin
